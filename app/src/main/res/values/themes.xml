<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.UniVent" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Main colors -->
        <item name="colorPrimary">@color/navy_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/red_primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorTertiary">@color/yellow_accent</item>
        
        <!-- Background/Surface colors -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSurface">@color/light_gray</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="CircleImage">
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomRoundedHeader40" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">40dp</item>
        <item name="cornerSizeBottomRight">40dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

    <style name="AdminEventCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">#C4C4C4</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>